<div class="container">
  <div class="row">
  <div class="col-md-3">
    <h2>User info</h2>
     <thead>
       <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg",size:'50x50' %>
       <th>name</th>
       <h3><%= @user.name %></h3>
       <th>introduction	</th>
       <th><%= @user.introduction %></th>
      <li>
       <%# if @user.id == current_user.id %>
        <p><%= link_to "", edit_user_path(@user), class: "fas fa-user-cog" %></p>
       <%# end %>
      </li>
     </thead>
    <h2>New book</h2>
       <%= form_with model: @newbook, url:'/books', local:true do |f| %>
      <h4>タイトル</h4>
       <%= f.text_field :title %>
      <h4>本文</h4>
       <%= f.text_area :body %>
       <%= f.submit 'Create Book' %>
       <% end %>
  </div>

  <div class="col-md-8 offset-md-1">
    <h1>Book detail</h1>
      <table class="table table-user-show">

        <tr>
          <td><%= attachment_image_tag @book.user, :profile_image, :fill, 30, 30, fallback: "no_image.jpg",size:'50x50' %></td>
          <td><%= link_to @user.name, user_path(@book.user_id) %></td>
          <td><%= link_to @book.title, book_path(@book.id) %></td>
          <td><%= @book.body %></td>
          <% if @book.user_id == current_user.id %>
            <td><%= link_to "Edit", edit_book_path(@book), class:"btn btn-success"%></td>
            <td><%= link_to "Destroy", book_path(@book), method: :delete, data: {confirm: "本当に消しますか？"}, class:"btn btn-danger" %></td>
          <% end %>
        </tr>
      </table>
  </div>
 </div>
</div>