<div class="container">
  <div class="row">
    <div class="col-xs-3">
      <h2>New book</h2>
    </div>
  <div class="col-xs-9">
  <table class="table book-index">
    <%= form_with model:@book, local:true do |f| %>
      <h2>Books</h2>
       <thead>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
       </thead>
       <%= f.submit '投稿' %>
    <% end %>
  <tbody>
    <% @book.each do |book| %>
      <tr>
       <td>
        <%= link_to user_path(book.user) do %>
        <%= attachment_image_tag book.user, :profile_image, :fill, 50, 50,fallback: "no_image.jpg"%>
        <% end %>
       </td>
      <td><%= link_to book.title, book_path(book.id) %></td>
      <td><%= book.body %></td>
      </tr>
        <% end %>
  </tbody>
 </table>
   </div>
  </div>
</div>