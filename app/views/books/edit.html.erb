<h1>Editing Book</h1>
<%= form_for(@book) do |f| %>
  <% if @book.errors.any? %>
    <div class="error">
      <h3><%= @book.errors.count %> errors prohibited this book from being saved:</h3>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
<div class="row">
  <div class="col-xs-offset-3 col-xs-6">
    <h1>Editing Book</h1>
    <div class="menu">
      <%= link_to "Show", book_path(@book) %>
      <%= link_to "Back", books_path %>
    </div>
  <% end %>
  <div class="form-title">Title</div>
    <%= f.text_field :title %>
  <div class="form-body">Opinion</div>
    <%= f.text_area :body %><br>
  <div class="upload">
    <%= f.submit " Update Book" %>
  </div>
<% end %>
<div class="menu">
  <%= link_to "Show", book_path(@book) %>
  <%= link_to "Back", books_path %>
    </div>
  <div class="col-xs-3"></div>
</div>