<div class="container">
  <div class="row">
    <div class="col-md-3">
    <% if @user.id==current_user.id %>
  　　<% link_to("編集", "users/#{@user.id}/edit") %>
　　<% end %>

      <h2>User info</h2>
     <thead>
       <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg",size:'50x50' %>
       <th>name</th>
       <h3><%= @user.name %></h3>
       <th>introduction	</th>
       <th><%= @user.introduction %></th>
      <li>
       <p><%= link_to "", edit_user_path(@user), class: "fas fa-user-cog" %></p>
      </li>
     </thead>

     <h2>New book</h2>
       <%= form_with model: @book, url: books_path, method:"post", local:true do |f| %>
      <h4>Title</h4>
       <%= f.text_field :title %>
      <h4>Opinion</h4>
       <%= f.text_area :body %>
       <%= f.submit 'Create Book' %>
       <% end %>
    </div>
 <div class="col-md-8 offset-md-1">
   <table class="table table-user-show">
      <h1>Books</h1>
        <thead>
         <th></th>
         <th>Title</th>
         <th>Opinion</th>
        </thead>
       <% @books.each do |book| %>
      <tr>
       <td>
        <%= link_to  user_path(@user) do %>
        <%= attachment_image_tag book.user, :profile_image, :fill, 50, 50,fallback: "no_image.jpg",size:'50x50'%>
        <% end %>
       </td>
      <td><%= link_to book.title, book_path(book.id) %></td>
      <td><%= book.body %></td>
      </tr>
        <% end %>
      </table>
    </div>
  </div>

  <footer>
  <div class='container mt-5'>
    <div class='row'>
      <div class='mx-auto'>
        <p>CopyRight Infratop.inc</p>
      </div>
    </div>
  </div>
 </footer>
</div>