<div class="container">
 <div class="row">
  <div class="col-md-3">
    <h2>User info</h2>
     <thead>
       <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg",size:'50x50' %>
       <th>name</th>
       <h3><%= @user.name %></h3>
       <th>introduction	</th>
       <th><%= @user.introduction %></th>
      <li>
       <% if @user.id = current_user.id %>
        <p><%= link_to "", edit_user_path(@user), class: "fas fa-user-cog" %></p>
       <% end %>
      </li>
     </thead>
    <h2>New book</h2>
       <%= form_with model: @newbook, url:'/books', local:true do |f| %>
      <h4>タイトル</h4>
       <%= f.text_field :title %>
      <h4>本文</h4>
       <%= f.text_area :body %>
       <%= f.submit 'Create Book' %>
       <% end %>
  </div>


 <div class="col-md-8 offset-md-1">
  <table class="table table-sm user-index">
    <h2>Users</h2>
     <thead>
       <th>image</th>
       <th>name</th>
       <th></th>
     </thead>

  <tbody>
    <% @users.each do |user| %>
     <tr>
       <td><%= attachment_image_tag user, :profile_image, :fill, 50, 50,fallback: "no_image.jpg",size:'50x50' %></td>
       <td><%= user.name %></td>
       <td><%= link_to "Show", "/users/#{user.id}" %></td>
     </tr>
  	 <% end %>
  </tbody>
  </table>
 </div>
</div>


 <footer>
  <div class='container mt-5'>
    <div class='row'>
      <div class='mx-auto'>
        <p>CopyRight Infratop.inc</p>
      </div>
    </div>
  </div>
 </footer>
</div>